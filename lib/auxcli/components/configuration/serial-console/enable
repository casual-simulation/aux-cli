#!/bin/bash
set -e

auxcli debug-printf "DEBUG (serial-console-enable): Enabling serial-console.\n"

if ! sudo grep "console=serial0" "/boot/cmdline.txt"; then
    auxcli debug-printf "DEBUG (serial-console-enable): serial0 not found.\n"
    auxcli debug-printf "DEBUG (serial-console-enable): Adding serial0\n"
    printf "console=serial0,115200" | sudo tee -a /boot/cmdline.txt
fi

if ! sudo grep "console=ttyAMA0" "/boot/cmdline.txt"; then
    auxcli debug-printf "DEBUG (serial-console-enable): ttyAMA0 not found.\n"
    auxcli debug-printf "DEBUG (serial-console-enable): Adding ttyAMA0\n"
    printf "console=ttyAMA0,115200" | sudo tee -a /boot/cmdline.txt
fi

auxcli write "components" "serial-console" "enabled" "true"