#!/bin/bash
set -e


config_path=$(jq -r '.[] | select( .name == "btmode" ) | .config_path' /etc/auxcli/commands.json)

config="/etc/auxcli/config.json"
tmp="/etc/auxcli/config.json.tmp"
previous_mode=$(jq -r '.btmode' $config)

# args_short=($(jq -r '.[].arg_short' $config_path))
args_long=($(jq -r '.[].arg_long' $config_path))
# args=("${args_short[@]}" "${args_long[@]}")


# readarray splits each newline into one element in the array
readarray -t args_desc < <(jq '.[].short_desc' $config_path)

usage() {
    printf "\nUsage:    auxcli btmode [OPTIONS]\n\n"
    printf "A tool for configuring the bluetooth mode.\n\n"
    printf "OPTIONS:\n"
    for ((i = 0; i < ${#args_long[@]}; i++)); do
        printf "\t%-6s\t%s\n" "${args_long[$i]}" "${args_desc[$i]}"
    done
    exit 1
}

err_check() {
    # First error check
    # Show the usage menu if there aren't any arguments
    auxcli debug-printf "DEBUG (btmode): First error check.\n"
    if [ $# -eq 0 ]; then
        printf "\nYou need to pass an argument to change the bluetooth mode.\n"
        usage
    fi

    # Second error check
    # Throw an error messege if the first argument isn't valid
    auxcli debug-printf "DEBUG (btmode): Second error check.\n"
    if [[ ! ${args[*]} =~ $1 ]]; then
        printf "\n\"%s\" is an invalid argument.\n" "$1"
        printf "Run auxcli btmode -h for help.\n\n"
        exit 1
    fi
}

err_check "$@"

while [[ $# -gt 0 ]]; do
    case "$1" in
    none)
        auxcli debug-printf "DEBUG (btmode): Setting btmode to 'none'\n"
        auxcli write "config" "btmode" "none"
        if [ "$previous_mode" == "tether" ]; then
            auxcli debug-printf "DEBUG (btmode): Previous mode was 'tether'\n"
            auxcli debug-printf "DEBUG (btmode): Stopping service: auxcli-bt-tether.\n"
            sudo systemctl stop auxcli-bt-tether
            auxcli debug-printf "DEBUG (btmode): Disabling service: auxcli-bt-tether.\n"
            sudo systemctl disable auxcli-bt-tether
            auxcli debug-printf "DEBUG (btmode): Setting reboot_required to 'true'\n"
            auxcli write "config" "reboot_required" "true"
        elif [ "$previous_mode" == "serial" ]; then
            auxcli debug-printf "DEBUG (btmode): Stopping service: auxcli-bt-serial-scan.\n"
            sudo systemctl stop auxcli-bt-serial-scan
            auxcli debug-printf "DEBUG (btmode): Disabling service: auxcli-bt-serial-scan.\n"
            sudo systemctl disable auxcli-bt-serial-scan
        fi
        shift # past argument
        ;;
    tether)
        auxcli debug-printf "DEBUG (btmode): Setting btmode to 'tether'\n"
        auxcli write "config" "btmode" "tether"
        if [ "$previous_mode" == "serial" ]; then
            auxcli debug-printf "DEBUG (btmode): Previous mode was 'serial'\n"
            auxcli debug-printf "DEBUG (btmode): Stopping service: auxcli-bt-serial-scan.\n"
            sudo systemctl stop auxcli-bt-serial-scan
            auxcli debug-printf "DEBUG (btmode): Disabling service: auxcli-bt-serial-scan.\n"
            sudo systemctl disable auxcli-bt-serial-scan
        fi
        auxcli debug-printf "DEBUG (btmode): Enabling service: auxcli-bt-tether.\n"
        sudo systemctl enable auxcli-bt-tether
        auxcli debug-printf "DEBUG (btmode): Starting service: auxcli-bt-tether.\n"
        sudo systemctl start auxcli-bt-tether
        shift # past argument
        ;;
    serial)
        auxcli debug-printf "DEBUG (btmode): Setting btmode to 'serial'\n"
        auxcli write "config" "btmode" "serial"
        if [ "$previous_mode" == "tether" ]; then
            auxcli debug-printf "DEBUG (btmode): Previous mode was 'tether'\n"
            auxcli debug-printf "DEBUG (btmode): Stopping service: auxcli-bt-tether.\n"
            sudo systemctl stop auxcli-bt-tether
            auxcli debug-printf "DEBUG (btmode): Disabling service: auxcli-bt-tether.\n"
            sudo systemctl disable auxcli-bt-tether
            auxcli debug-printf "DEBUG (btmode): Setting reboot_required to 'true'\n"
            auxcli write "config" "reboot_required" "true"
        fi
        auxcli debug-printf "DEBUG (btmode): Enabling service: auxcli-bt-serial-scan.\n"
        sudo systemctl enable auxcli-bt-serial-scan
        auxcli debug-printf "DEBUG (btmode): Starting service: auxcli-bt-serial-scan.\n"
        sudo systemctl start auxcli-bt-serial-scan
        shift # past argument
        ;;
    -r | --reboot)
        auxcli debug-printf "DEBUG (btmode): Setting reboot_on_exit to 'true'\n"
        auxcli write "config" "reboot_on_exit" "true"
        shift # past argument
        ;;
    -h | -help | --help)
        usage
        shift # past argument
        ;;
    esac
done
