#!/bin/bash
set -e

if $(jq --arg component "$1" -r '.[] | select( .name == $component ) | .installed' /etc/auxcli/components.json); then
    auxcli debug-printf "DEBUG (installed): %s is installed.\n" "$1"
    exit 0
else
    auxcli debug-printf "DEBUG (installed): %s is not installed.\n" "$1"
    exit 1
fi
