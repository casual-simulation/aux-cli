#!/bin/bash
set -e

if $(jq --arg component "$1" -r '.[] | select( .name == $component ) | .enabled' /etc/auxcli/components.json 1> /dev/null); then
    auxcli debug-printf "DEBUG (enabled): %s is enabled.\n" "$1"
    exit 0
else
    auxcli debug-printf "DEBUG (enabled): %s is not enabled.\n" "$1"
    exit 1
fi
